<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="vehicle_api_log_tree_view" model="ir.ui.view">
        <field name="name">vehicle.api.log.tree.view</field>
        <field name="model">vehicle.api.log</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="response_date"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="vehicle_api_log_search_view" model="ir.ui.view">
        <field name="name">vehicle.api.log.search.view</field>
        <field name="model">vehicle.api.log</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="status"/>
                <field name="response_date"/>
            </search>
        </field>
    </record>

    <record id='vehicle_api_log_action' model='ir.actions.act_window'>
        <field name="name">Vehicles Log</field>
        <field name="res_model">vehicle.api.log</field>
        <field name="view_mode">tree</field>
        <field name="context">{'create':False}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            No logs from API yet.
          </p><p>
            Interact with the API in the contact module.
          </p>
        </field>
    </record>

    <menuitem id="vehicle_api_log_menu"
        action="vehicle_api_log_action"
        name="API Log"
        parent="fleet.fleet_configuration"
        sequence="99"
        groups="fleet.fleet_group_manager"/>
</odoo>
