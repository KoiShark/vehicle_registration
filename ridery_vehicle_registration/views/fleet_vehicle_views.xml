<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="fleet_vehicle_view_form_inherit" model="ir.ui.view">
        <field name="name">fleet.vehicle.form.inherit</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
        <field name="arch" type="xml">
            <field name="image_128" position="before">
                <field name="vehicle_image_128" widget="image" class="oe_avatar"/>
            </field>
            <field name="license_plate" position="after">
                <field name="vehicle_sequence" invisible="1"/>
            </field>
        </field>
    </record>
</odoo>
